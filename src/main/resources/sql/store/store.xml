<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store">

	<select id="getProductList" parameterType="com.maven.yh.store.vo.CategoryPagingVO" resultType="com.maven.yh.store.vo.ProductListVO">
		SELECT id,
		       thumbnail,
		       name,
		       price,
		       freeDelivery,
		       regdate
		  FROM product
		 WHERE flag ='Y'
		   AND categoryMain = #{category}
	     order by regdate desc;
	
	</select>

</mapper>